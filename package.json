{
  "name": "event-manager-app",
  "version": "1.0.0",
  "description": "Comprehensive event management application for weddings, birthdays, and other events",
  "main": "server/index.js",
  "engines": {
    "node": "18.19.0",
    "npm": "9.8.1"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "docker:build": "docker build -t event-manager-app .",
    "docker:run": "docker run -p 5000:5000 event-manager-app",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose --profile development up -d",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d"
  },
  "keywords": ["events", "wedding", "birthday", "management", "calendar"],
  "author": "Event Manager Team",
  "license": "MIT",
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "sqlite3": "5.1.6",
    "bcryptjs": "2.4.3",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "express-validator": "7.0.1",
    "dotenv": "16.3.1",
    "moment": "2.29.4",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "nodemon": "3.0.1",
    "concurrently": "8.2.0"
  }
}

